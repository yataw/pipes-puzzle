{
    "compilerOptions": {
        "allowJs": true,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "lib": ["dom", "es2017"],
        "module": "esnext",
        "moduleResolution": "node",
        "noEmit": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "esnext",
        "baseUrl": ".",
        "paths": {
            "components/*": ["components/*"],
            "api/*": ["api/*"],
            "hooks/*": ["hooks/*"],
            "actions/*": ["actions/*"],
            "reducers/*": ["reducers/*"],
            "selectors/*": ["selectors/*"],
            "store/*": ["store/*"],
            "routes/*": ["routes/*"],
            "globals/*": ["globals/*"],
            "utils/*": ["utils/*"]
        }
    },
    "exclude": ["node_modules"],
    "include": ["**/*.ts", "**/*.tsx"]
}
